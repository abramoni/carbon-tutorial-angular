{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "skipLibCheck": true,       // trick to avoid AsyncIterable error
    "lib": [
      "es2016",
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "baseUrl": "./"
  }
}
