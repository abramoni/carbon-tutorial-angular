{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "disableTypeScriptVersionCheck": true,
    "target": "es2015",
    "lib": [
      "es2016",
      "ES6",
      "dom",
      "esnext.asynciterable"
    ],
    "module": "esnext",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true
  }
}